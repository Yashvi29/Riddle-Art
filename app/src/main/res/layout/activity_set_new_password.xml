<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="30dp"
    tools:context=".SetNewPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/update_new_password_icon"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Credentials"
            android:textSize="40sp"
            android:fontFamily="@font/bungee"
            android:includeFontPadding="false"
            android:textColor="#000"
            android:gravity="center"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/muli"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="Your identity has been verified \n Set your new password"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_marginTop="40dp"
            android:background="#fff"
            app:boxBackgroundColor="#fff"
            android:hint="New Password"
            android:textColorHint="#000"
            app:startIconDrawable="@drawable/password_small_icon"
            app:startIconTint="#000"
            app:endIconMode="password_toggle"
            app:endIconTint="#000"
            android:id="@+id/set_password"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeColor="#000"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:layout_height="wrap_content"/>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:background="#fff"
            android:id="@+id/confirm_password"
            app:boxBackgroundColor="#fff"
            android:hint="Confirm Password"
            android:textColorHint="#000"
            app:startIconDrawable="@drawable/password_small_icon"
            app:startIconTint="#000"
            app:endIconMode="password_toggle"
            app:endIconTint="#000"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeColor="#000"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:layout_height="wrap_content"/>


        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:onClick="setNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/black"
            android:layout_marginTop="20dp"
            android:text="OK"/>



    </LinearLayout>

</ScrollView>