<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.childdraw">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/wall"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/FullScreen">
        <activity android:name=".ViewFileAct"></activity>
        <activity android:name=".Saved" />
        <activity android:name=".PaintStart" />
        <activity android:name=".ViewItems" />
        <activity android:name=".VerifyOTP" />
        <activity android:name=".ForgetPasswordSuccessMessage" />
        <activity android:name=".SetNewPassword" />
        <activity android:name=".MakeSelection" />
        <activity android:name=".ForgetPassword" />
        <activity android:name=".UserProfile" />
        <activity android:name=".SignUp" />
        <activity android:name=".Login" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>